{
  "$schema": "https://codesandbox.io/schemas/tasks.json",
  "setupTasks": [
    {
      "name": "Install Dependencies",
      "command": "npm install"
    },
    {
      "name": "Setup Database",
      "command": "npx prisma db push"
    },
    {
      "name": "Seed Database",
      "command": "npx prisma db seed"
    }
  ],
  "tasks": {
    "dev": {
      "name": "Dev Server",
      "command": "npm run dev",
      "runAtStart": true,
      "preview": {
        "port": 3000
      }
    }
  }
}
